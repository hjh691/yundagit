<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/title_bar_style"
    android:layout_gravity="center_vertical"
    android:background="@color/state_green_color" >

    <com.example.substationtemperature.view.CircleImageView
        android:id="@+id/callLeftMenuBtn"
        style="@style/main_title_bar_left_menu_btn_style"
        android:src="@drawable/btn_left_menu_bg" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/connectionStateIcon"
            style="@style/title_bar_state_connected"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/bat_state"
            style="@style/title_bar_state_connected"
            android:src="@drawable/ima_bat_55"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/refreshBtn"
            style="@style/main_title_bar_save_btn_style"
            android:src="@drawable/btn_refresh"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/callLeftMenuBtn"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mainTitleBar_appname"
            style="@style/title_bar_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/name_ver"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/txt_titlebar_username"
            style="@style/title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:text=""
            android:textSize="@dimen/title_bar_text_size" />

    </LinearLayout>

</RelativeLayout>
