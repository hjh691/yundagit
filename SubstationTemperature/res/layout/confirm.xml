<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/radiogr1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
       android:background="@drawable/title2">

        <TextView
            android:id="@+id/textview1"
            style="@style/textshadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:text="提示确认"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/radiogr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">        <ImageView            android:id="@+id/imageView1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginLeft="10px"            android:src="@drawable/jng1" />        <TextView            android:id="@+id/text_info"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="确认删除该条记录吗？"            android:textAppearance="?android:attr/textAppearanceLarge"            android:textColor="#000000"            android:layout_gravity="center_vertical"            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/but_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17sp"
            android:background="@drawable/but_tong"
            android:text="确认" />

        <Button
            android:id="@+id/but_qx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17sp"
            android:background="@drawable/but_tong"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>