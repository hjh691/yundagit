<?xml version="1.0" encoding="utf-8"?>

<!-- 误差测试 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:background="@drawable/ca_view_container_bg" >

        <TextView
            android:id="@+id/txt_ver"
            style="@style/ca_label_style"
            android:gravity="center"
            android:text="误差类型" />

        <Spinner
            android:id="@+id/spi_wclx"
            style="@style/ca_input_style"
            android:layout_weight="2"
            android:entries="@array/error_type" />

    </LinearLayout>

    <include layout="@layout/common_error_testing_layout"/>
    
</LinearLayout>