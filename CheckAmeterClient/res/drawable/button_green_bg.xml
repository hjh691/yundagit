<?xml version="1.0" encoding="utf-8"?>

<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="#416c50" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#416c50" />
        </shape>
    </item>
    <item>
        <shape>
            <!-- <stroke android:width="1.0dip" android:color="#ebebeb"/> -->
            <solid android:color="#4da36b" />
            
            <padding android:left="2.0dip" android:top="2.0dip" 
                android:right="2.0dip" android:bottom="2.0dip" />  
                
            <corners android:radius="1dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#ebebeb" />
        </shape>
    </item>
</selector>